<Window x:Class="MainWindow"
        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrushCompanion"
xmlns:tb="http://www.hardcodet.net/taskbar" 
        mc:Ignorable="d"
        Title="Crush Companion" Height="250" Width="250" ResizeMode="NoResize" Topmost="True" Loaded="Window_Loaded" MouseLeftButtonUp="Window_MouseLeftButtonUp" MouseLeftButtonDown="Window_MouseLeftButtonDown" AllowsTransparency="True" WindowStyle="None" WindowStartupLocation="Manual" IsTabStop="False" ShowInTaskbar="False" ContextMenuOpening="Window_ContextMenuOpening" ContextMenuClosing="Window_ContextMenuClosing" Opacity="0.75">
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header = "_Currency" >
                <ComboBoxItem Content="AUD" />
                <ComboBoxItem Content="USD"/>
            </MenuItem>
            <Separator />
            <MenuItem Header = "_Follow Mouse" IsCheckable = "True" IsChecked=" false" 
                  Checked = "followMouseChecked" Unchecked = "followMouseUnchecked" />
            <MenuItem Header = "_Gravity" IsCheckable = "True" IsChecked=" true" 
                  Checked = "gravityChecked" Unchecked = "gravityUnchecked" />
            <MenuItem Header = "_Stay Still!" IsCheckable = "True" IsChecked=" false" 
                  Checked = "stayStillChecked" Unchecked = "stayStillUnchecked" FontWeight="Bold" />
            <Separator />
            <Separator />
            <MenuItem Header = "_REMOVE" Click = "kill" Foreground="#FFDE1818" FontWeight="Bold" />
        </ContextMenu>
    </Window.ContextMenu>
    
    
   
    <Window.Background>
        <SolidColorBrush Color="White" Opacity="0"/>
    </Window.Background>


    <Canvas Height="Auto" Margin="75,75,75,75" Width="Auto">

        <Image x:Name="image" Height="100" Width="100" gif:ImageBehavior.AnimatedSource="/floating_invader_zero.gif" Source="/floating_invader_zero.gif"/>
        <Label x:Name="priceLabel" Content="$0.99999999" Margin="50,160,0,0" Height="37" Width="170" Canvas.Left="-85" Canvas.Top="-65" FontSize="18" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Bahnschrift SemiBold" Opacity="0.9"/>
        

        <tb:TaskbarIcon
      ToolTipText="Crush Companion v0.1" IconSource="/ICON_invader_zero.ico" />


    </Canvas>




</Window>

